<%- include('../layouts/header') -%>

<div class="row">
    <% products.forEach(p => { %>
        <div class="col-xs-12 col-md-4">
            <img height="100" width="100" src="/public/product_images/<%= p._id %>/<%= p.image %>" alt="">
            <h3><%= p.title %></h3>
            <h3>$<%= parseFloat(p.price).toFixed(2) %></h3>
            <a href="/products/<%= p.category %>/<%= p.slug %>">Detail Products</a>
        </div>
    <% }); %>
</div>

<%- include('../layouts/footer') -%>