<%- include('../layouts/header') -%>

<div class="row">
    <div class="col-xs-12 col-md-3">
        <h1 class="page-header"><%= p.title %></h1>
    </div>
    <div class="col-xs-12">
        <img height="200" width="200" src="/public/product_images/<%= p._id %>/<%= p.image %>" alt="">
        <br>
    </div>
    <div class="col-xs-12 col-md-5">
        <p><%= p.desc %></p>
        <p>$<%= parseFloat(p.price).toFixed(2) %></p>  
        <% if(log) { %>
            <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
        <% } else { %>
            <h2>You must be logged <a href="/users/login">To Login</a></h2>
        <% } %>
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(image => { %>
                <% if(image != "thumbs") { %>
                    <li  style="list-style: none; display: inline-block; margin: 10px;">
                        <a href="/public/product_images/<%= p._id %>/gallery/<%= image %>" data-fancybox="gallery">
                            <img src="/public/product_images/<%= p._id %>/gallery/thumbs/<%= image %>" alt="">
                        </a>
                    </li>
                <% } %>
            <% }); %>
        </ul>
    </div>
</div>

<%- include('../layouts/footer') -%>