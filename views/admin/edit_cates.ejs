<%- include('../layouts/admin_header') -%>

<h3 class="page-title">Edit Category</h3>
<a href="/admin/cates" class="btn btn-primary">Back to all Category</a>

<form action="/admin/cates/edit/<%= id %>" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= title %>">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-10">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<%- include('../layouts/admin_footer') -%>