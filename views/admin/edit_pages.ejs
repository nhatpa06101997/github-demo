<%- include('../layouts/admin_header') -%>
<br>
<h3 class="page-title">Edit Page</h3>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>

<form action="/admin/pages/edit/<%= id %>" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= title %>">
        </div>
    </div>
    
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Slug</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" name="slug" placeholder="Slug" value="<%= slug %>">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Content</label>
        <div class="col-xs-10">
            <textarea name="content" placeholder="Content" class="form-control" cols="30" rows="10"><%= content %></textarea>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offet-2 col-xs-10">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<%- include('../layouts/admin_footer') -%>